
page{
  padding-bottom:200rpx;
  box-sizing: border-box;
}

.li{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color:#838383;
  align-items: center;
}
.top{
  width: 100%;
  padding:10rpx 30rpx;
  box-sizing: border-box;
}
.title{
  color:#13161a;
  font-size: 34rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
}
.img_box{
  width: 40rpx;
  height: 40rpx;
}
.img_box image{
  width: 40rpx;
  height: 40rpx;
}


/* 中间内容 */
.content{
  width: 100%;
  background-color: #f7f7f7;
  padding:0 30rpx 20rpx 30rpx;
  box-sizing: border-box;
}
.contnet_top{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color:#9b9a9a;
  margin-bottom:30rpx;
}
.mark{
  width:100%;
  height:200rpx;
  margin:20rpx 0;
  padding:20rpx;
  background-color:#e6e6e6;
  box-sizing: border-box;
  line-height:42rpx;
  border-radius:10rpx;
}
.jia{
  width: 140rpx;
  height: 140rpx;
  background-color: #dbdbdb;
  position: relative;
  display: inline-block;
}
.img_block{
  width: 140rpx;
  height: 140rpx;
  display: inline-block;
  margin-right:10rpx;
}
.column{
  width: 72rpx;
  height: 4rpx;
  background-color: #c0c0c0;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.row{
  width:4rpx;
  height: 72rpx;
  background-color: #c0c0c0;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}



/* 输入框内容 */
.warp{
  padding:0 25rpx;
  box-sizing: border-box;
}
.warp_title{
  height: 90rpx;
  width: 100%;
  line-height: 90rpx;
  font-size: 32rpx;
}
.warp_li{
  width: 100%;
  height: 126rpx;
  border-bottom:1rpx solid #e6e6e6;
}
.warp_li input{
  width: 100%;
  height: 100%;
}



.btn{
  width:670rpx;
  height:78rpx;
  background-color:#ea6248;
  border-radius:10rpx;
  text-align:center;
  line-height:78rpx;
  font-size:30rpx;
  color:#fff;
  font-weight:600;
  /* margin:auto;
  margin-top:100rpx; */
  position: fixed;
  z-index: 10;
  left:50%;
  bottom:50rpx;
  transform: translateX(-50%);
}