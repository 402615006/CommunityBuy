
.top{
  background-color: #fff;
  position: fixed;
  top:0;
  left:0;
  width: 100vw;
  z-index: 10;
}
.content_text{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left:15rpx;
  box-sizing: border-box;
}
.img_box{
  width: 50rpx;
  height: 50rpx;
  position: relative;
}
.img_box image{
  width: 50rpx;
  height: 50rpx;
}

.input_box{
  background-color: #e0e0e0;
  text-align: left;
  padding-left: 70rpx;
  color:#838383;
  margin-left:15rpx;
  position: relative;
}
input{
  width: 350rpx;
  font-size: 28rpx;
}
.search_icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left:25rpx;
  top:50%;
  transform: translateY(-20rpx);
}



.content_head{
  width: 100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.content_head_title{
  color:#A1A1A1;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.content_head_text{
  align-self: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-family: '微软雅黑', sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 20rpx;
  background: inherit;
  background-color: rgba(242, 242, 242, 1);
  height: 48rpx;
  display: inline-block;
  line-height: 48rpx;
  margin-right:20rpx;
  margin-bottom:20rpx;
}






.warp{
  width: 100%;
}
.warp .li{
  min-height: 200rpx;
  background-color: #fff;
  padding:20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom:1rpx solid #e6e6e6;
}
.li_left{
  display: flex;
  justify-content: flex-start;
}
.li_lefttext{
  max-width: 350rpx;
}
.li .img_{
  width: 126rpx;
  height: 126rpx;
  border-radius: 8rpx;
  margin-right:24rpx;
}
.name{
  font-size: 28rpx;
  color:#3c3b41;
  font-weight: 600;
  padding-left:10rpx;
  box-sizing: border-box;
}
.icon_dizhi{
  width: 40rpx;
  height: 40rpx;
}
.two{
  display: flex;
  justify-content: flex-start;
  color:#828282;
  font-size: 24rpx;
  margin-top:15rpx;
}
.price{
  font-size: 18rpx;
  color:#ec6b55;
  margin-top:20rpx;
}
.font_size26{
  font-size: 26rpx;
}

.li_right{
  display: flex;
  flex-direction:column;
  justify-content: flex-start;
  text-align: right;
}
.juli{
  font-size: 20rpx;
  color:#838383;
}
.bottom{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.bottom_num{
  font-size: 24rpx;
  color:#8b8b8b;
  margin-left:16rpx;
  margin-top:15rpx;
}
.icon_pr{
  width: 34rpx;
  height: 26rpx;
}
.two_text{
  height: 36rpx;
  line-height: 36rpx;
  padding:0 15rpx;
  box-sizing: border-box;
  background-color: #fcf2f3;
  border-radius: 7rpx;
}










.no_data {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -40%);
  text-align: center;
}

.no_data_icon {
  width: 180rpx;
  height: 180rpx;
}
.wx_margin_top{
  margin-top:20rpx;
}
.wx_color96{
  color: #969696;
}


.right_li{
  width: 100%;
  min-height: 200rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  padding:20rpx 30rpx;
  border-bottom:1rpx solid #e6e6e6;
}

.img_url{
  width: 128rpx;
  height: 128rpx;
  border-radius: 8rpx;
}
.right_box{
  flex: 1;
  padding-left:20rpx;
  box-sizing: border-box;
}
.right_top{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.name{
  font-size: 32rpx;
  color:#3c3b41;
  font-weight: 600;
  max-width: 240rpx;
}
.price{
  font-size: 22rpx;
  color:#575757;
}
.right_desc{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-top:15rpx;
  min-height: 40rpx;
}
.dizhi_icon{
  width: 40rpx;
  height: 40rpx;
}
.des{
  padding-top:5rpx;
  font-size: 22rpx;
  color:#818181;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.right_footer{
  margin-top:15rpx;
  padding-left:10rpx;
  box-sizing: border-box;
}
