page {
  background-color: #f7f7f7;
  height: 100%;
}

.order {
  width: 100%;
  height: 100%;
}

.head {
  height: 110rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
}

.box {
  width: 488rpx;
  height: 63rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ee685d;
  display: flex;
  justify-content: space-between;
}

.tabli {
  width: 25%;
  height: 100%;
  text-align: center;
  line-height: 63rpx;
  font-size: 28rpx;
  color: #ee685d;
  border-right: 2rpx solid #ee685d;
}

.tabli:last-child {
  border-right: none;
}

.act_tab {
  background-color: #ee685d;
  color: #fff;
}

.content {
  width: 100%;
  height: 100%;
  padding-top: 110rpx;
  box-sizing: border-box;
  position: relative;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
