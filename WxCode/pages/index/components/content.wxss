

.content{
  width: 100%;
  box-sizing: border-box;
  padding-bottom:20rpx;
}

.top{
  width: 100%;
  height: 100rpx;
  padding:10rpx 30rpx 0 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
}
.felx{
  width: 100%;
  height: 74rpx;
  position: absolute;
  z-index: 1;
  left:0;
  top:20rpx;
  padding:0 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.swiper{
  width: 100%;
  height: 74rpx;
  background-color: #f1d99d;
  border-radius: 10rpx;
}
.swiper-item{
  width: 100%;
  height: 74rpx;
}
.top .top_box{
  width:100%;
  height: 74rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
  padding:0 16rpx;
  box-sizing: border-box;
}
.top_left{
  height: 74rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top_right{
  height: 74rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.top .top_box .top_img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right:20rpx;
}
.top_text{
  color:#786634;
  font-size: 22rpx;
}
.icon_wnhao{
  width: 27rpx;
  height: 27rpx;
  margin-left:10rpx;
}


.suspended{
  position: sticky;
  /* top:500rpx; */
  background-color: #fff;
  z-index: 1;
}

.tab{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  height: 75rpx;
  align-items: center;
  font-size: 30rpx;
}
.tab_text{
  position: relative;
  color:#4a494f;
  height: 75rpx;
  line-height: 75rpx;
  min-width: 100rpx;
}

.bg_text{
  width: 100%;
  height: 75rpx;
  position: absolute;
  left:0;
  top:0;
  text-align: center;
  z-index: 1;
  font-size: 30rpx;
  font-family: "Microsoft YaHei";
  font-weight: bold;
}

.bg{
  position: absolute;
