
.top{
  background-color: #fff;
  position: fixed;
  top:0;
  left:0;
  width: 100vw;
  z-index: 10;
}
.content{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left:15rpx;
  box-sizing: border-box;
}
.img_box{
  width: 55rpx;
  height: 55rpx;
  position: relative;
}
.search_num{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #ff1819;
  font-size: 20rpx;
  line-height: 30rpx;
  color:#fff;
  text-align: center;
  position: absolute;
  right:-10rpx;
  top:-10rpx;
}
.img_box image{
  width: 55rpx;
  height: 55rpx;
}
.input_box{
  width: 350rpx;
  background-color: #dedede;
  text-align: left;
  padding-left: 70rpx;
  color:#838383;
  margin-left:15rpx;
  position: relative;
}
.search_icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left:25rpx;
  top:50%;
  transform: translateY(-20rpx);
}