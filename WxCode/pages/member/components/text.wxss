
.text{
  overflow: hidden;
  min-height: calc(100vh - 190rpx);
}

.ul{
  width: 100%;
  overflow: hidden;
}

.li{
  width: 350rpx;
  float: left;
  margin-left:15rpx;
  margin-bottom:20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
}
.img{
  height: 200rpx;
  width: 350rpx;
  margin-right:10rpx;
}
.h2{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left:5rpx;
  box-sizing: border-box;
}
.icon_sto{
  width: 40rpx;
  height: 40rpx;
}
.stocode{
  color:#3e3d43;
  font-size: 28rpx;
  font-weight: bold;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.h1{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 10rpx;
  box-sizing: border-box;
  margin-top:5rpx;
}
.left_box{
  padding: 0 8rpx;
  height: 31rpx;
  border-radius: 4rpx;
  background-color: #f6d19a;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 20rpx;
  padding-left:10rpx;
  box-sizing: border-box;
}
.font_size20{
  font-size: 20rpx;
  color:#a27442;
}
.icon_g{
  width: 28rpx;
  height: 20rpx;
  margin-right:5rpx;
}
.tingshou{
  font-size: 20rpx;
  color:#838383;
}
.price1{
  color:#838383;
  font-size: 20rpx;
  width: 100%;
  padding-left:10rpx;
  box-sizing: border-box;
  text-decoration: line-through;
  margin-top:15rpx;
}
.price2{
  color:#ea6248;
  font-size: 32rpx;
  width: 100%;
  padding-left:10rpx;
  box-sizing: border-box;
  margin-top:15rpx;
  position: relative;
}
.money2{
  font-size: 22rpx;
}
.btn{
  width: 102rpx;
  height: 45rpx;
  /* background-color: #ff6841; */
  background: linear-gradient(to right,#fe9d4e ,#ff7256);
  border-radius: 16rpx;
  position: absolute;
  right:8rpx;
  top:0;
  color:#fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 45rpx;
}


.footer{
  height: 46rpx;
  width: 100%;
  border-top:1rpx dashed #e8e8e8;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left:10rpx;
  box-sizing: border-box;
  margin-top:15rpx;
}
.icon_fenxiang{
  width: 21rpx;
  height: 21rpx;
}
.footer_text{
  color:#848484;
  font-size: 20rpx;
  margin-left:10rpx;
}
.footer_num{
  background-color: #eb6147;
  height: 28rpx;
  font-size: 20rpx;
  color:#fff;
  border-radius: 14rpx;
  padding:0 10rpx;
  box-sizing: border-box;
  line-height: 28rpx;
  text-align: center;
  margin-left:10rpx;
}

.dibu{
  width: 100%;
  float: left;
}
.noMore{
  font-size: 26rpx;
  text-align: center;
  padding: 50rpx;
  color: #838383;
}

button::after{display:none}
button::after{border-color:transparent}
button::after{border-width:0}