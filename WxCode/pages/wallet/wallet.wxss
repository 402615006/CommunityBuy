 /* 四个tab  */
.los_box{
  width: 696rpx;
  height: 214rpx;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 18rpx;
  margin:auto;
  box-sizing: border-box;
  position: relative;
  margin-top:22rpx;
}
.logsm_box{
  width: 166rpx;
  height: 214rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.log_img_box{
  width: 89rpx;
  height: 89rpx;
  position: relative;
}
.log_icon{
  width: 89rpx;
  height: 89rpx;
}
.los_num{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #ff1819;
  font-size: 20rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  right: -10rpx;
  top: -5rpx;
}
.log_name{
  font-size: 22rpx;
  margin-top:18rpx;
  color:#3d3c42;
}

.footer_box{
  width: 696rpx;
  background-color: #fff;
  border-radius: 18rpx;
  margin:auto;
  box-sizing: border-box;
  position: relative;
  margin-top:20rpx;
  padding:0 30rpx 0 40rpx;
}
.footer_li{
  height: 100rpx;
  border-bottom:1rpx solid #dedede;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.footer_li:last-child{
  border:none;
}
.button_kefu{
  background-color: #fff;
  padding:0;
}
button::after {
  border: none;
}
.li_left{
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.icon_t{
  width: 32rpx;
  height: 31rpx;
  position: relative;
}
.red_d{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #ea6248;
  position: absolute;
  right:-15rpx;
  top:-15rpx;
}
.li_title{
  font-size: 28rpx;
  color:#3c3b41;
  margin-left:28rpx;
}
.li_right{
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.icon_jiantou{
  width: 50rpx;
  height: 50rpx;
}

.btn{
  width: 696rpx;
  height: 100rpx;
  border: none;
  background-color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  margin: auto;
  color: #000;
  margin-top: 20rpx;
}

.font_size24{
  font-size: 24rpx;
}
