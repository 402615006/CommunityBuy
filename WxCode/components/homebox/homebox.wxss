

.red_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 50;
}

.login_bj{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 51;
}

.red_content{
  position: fixed;
  /* background-color: #8601fd; */
  /* background: linear-gradient(to top,#cb00fc ,#8300fe); */
  width: 551rpx;
  height: 896rpx;
  left: 50%;
  top: 50%;
  transform:translate(-50%,-50%)  scale(0);
  text-align: center;
  z-index: 51;
  border-radius: 40rpx;
  padding-top:40rpx;
  box-sizing: border-box;
  transition: 0.6s;
}

.bg_img{
  width: 551rpx;
  height: 896rpx;
  position: absolute;
  top:0;
  left:0;
  z-index: -1;
}

.red_contenthide{
  width: 551rpx;
  height: 896rpx;
  transform:translate(-50%,-50%) scale(1);
}

.cha{
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  bottom:-80rpx;
  left:50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  text-align: center;
  line-height: 68rpx;
  color:#fff;
  background-color: #000;
  border-radius: 50%;
  border: 1rpx solid #baa69b;
  opacity: 0.3;
}