.red_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 20;
}

.login_bj{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 21;
}

.red_content{
  position: fixed;
  background-color: #8601fd;
  background: linear-gradient(to top,#cb00fc ,#8300fe);
  width: 572rpx;
  height: 665rpx;
  left: 50%;
  top: 50%;
  transform:translate(-50%,-50%)  scale(0);
  text-align: center;
  z-index: 211;
  border-radius: 40rpx;
  padding-top:40rpx;
  box-sizing: border-box;
  transition: 0.6s;
}
.red_contenthide{
  width: 572rpx;
  height: 665rpx;
  transform:translate(-50%,-50%) scale(1);
}
