.footer_li{
  width: 100%;
  height: 98rpx;
  border-bottom:1rpx solid #f2f2f2;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left:70rpx;
  box-sizing: border-box;
}
.jiantou{
  width: 50rpx;
  height: 50rpx;
}
.content_title{
  max-width: 550rpx;
  overflow: hidden;  /*超出部分隐藏*/
