

page{
  background-color: #f7f7f7;
}


.title{
  width: 100%;
  height: 114rpx;
  padding:0 50rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction:column;
  justify-content: center;
}

.title_text{
  height: 52rpx;
  padding:0 20rpx;
  border-radius: 26rpx;
  border: 1rpx solid #ef7167;
  color:#ef7167;
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  width: 130rpx;
  box-sizing: border-box;
}

.li{
  width: 100%;
  min-height: 220rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding-top:24rpx;
  padding-right:30rpx;
  box-sizing: border-box;
}

.li_left{
  width: 123rpx;
  display: flex;
  justify-content: flex-end;
}
.shou{
  width: 48rpx;
  height: 48rpx;
  font-size: 24rpx;
  background-color: #ee685d;
  border-radius: 50%;
  text-align: center;
  line-height: 48rpx;
  color:#fff;
  margin-right:20rpx;
}
.zhi{
  width: 48rpx;
  height: 48rpx;
  font-size: 24rpx;
  background-color: #62d084;
  border-radius: 50%;
  text-align: center;
  line-height: 48rpx;
  color:#fff;
  margin-right:20rpx;
}
.li_right{
  flex:1;
  display: flex;
  justify-content: space-between;
  border-bottom:1rpx solid #e6e6e6;
}

.li:last-child .li_right{
  border-bottom:none;
}

.name{
  font-size: 30rpx;
}

.yue{
  font-size: 24rpx;
  color:#9b9a9a;
  line-height: 34rpx;
  margin-top:10rpx;
}
.code{
  font-size: 24rpx;
  color:#9b9a9a;
  line-height: 34rpx;
}
.time{
  font-size: 24rpx;
  color:#9b9a9a;
  line-height: 34rpx;
}
.price{
  font-size: 24rpx;
}


.no_data {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -40%);
  text-align: center;
}

.no_data_icon {
  width: 180rpx;
  height: 180rpx;
}
