
page{
  background-color: #f7f7f7;

}
.bg{
  width: 750rpx;
  height: 168rpx;
  position: absolute;
  left:0;
  top:0;
  z-index: -1;
}
.box1{
  width: 690rpx;
  height: 170rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin:auto;
  margin-top:40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 20rpx;
  box-sizing: border-box;
}
.img_box{
  width: 95rpx;
  height: 95rpx;
  margin-left:20rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_img{
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
}
.test{
  margin-left:30rpx;
}
.name{
  font-size: 28rpx;
}
.type{
  font-size: 24rpx;
  color:#848484;
  margin-top:30rpx;
}
.date{
  font-size: 20rpx;
}
.box2{
  width: 710rpx;
  height: 178rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin:auto;
  margin-top:20rpx;
  position: relative;
}
.sm_box{
  width: 50%;
  height: 178rpx;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.sm_box_title{
  font-size: 20rpx;
  color:#828282;
}
.sm_box_num{
  font-size: 28rpx;
  color:#000;
  font-weight: bold;
  margin-top:50rpx;
}
.gang{
  position: absolute;
  left:50%;
  top:50%;
  width: 2rpx;
  height: 74rpx;
  background-color: #cfcfcf;
  transform: translateY(-50%);
}

/* 标题 */
.Title{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#ea6248;
  font-size: 30rpx;
  margin-top:30rpx;
}
.icon_tubiao{
  width: 61rpx;
  height: 17rpx;
}
.mar_lr{
  margin-left:15rpx;
  margin-right:15rpx;
}
.trrotate180{
  transform:rotate(180deg);
}

.content{
  width: 100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.li{
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.li_text{
  width: 33.3%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
}
.li:nth-child(2n){
  background-color: #f7f7f7;
}
.text_aligncenter{
  text-align: center;
}

.btn{
  width: 668rpx;
  height: 78rpx;
  background-color: #ee685d;
  text-align: center;
  line-height: 78rpx;
  color:#fff;
  font-size: 32rpx;
  font-weight: bold;
  margin:auto;
  margin-top:50rpx;
  border-radius: 10rpx;
}

.footer_text{
  font-size: 26rpx;
  color:#f0675d;
  width: 100%;
  text-align: center;
  margin-top:40rpx;
}
.footer_test{
  width: 100%;
  padding:0 20rpx;
  box-sizing: border-box;
  font-family: '微软雅黑', sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 24rpx;
  color: #FF9933;
}