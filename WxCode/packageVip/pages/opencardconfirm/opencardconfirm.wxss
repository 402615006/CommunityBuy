
page{
  width: 100%;
  background-color: #f7f7f7;
  padding-bottom:50rpx;
  box-sizing: border-box;
}
.opencardconfirm{
  width: 100%;
}
.head{
  height: 110rpx;
  width: 100%;
  position: relative;
  margin-bottom:20rpx;
}

.block1{
  width: 100rpx;
  height: 110rpx;
  padding-top:15rpx;
  box-sizing: border-box;
  position: absolute;
  left:25%;
  top:0;
  transform: translateX(-50%)
}

.block2{
  width: 100rpx;
  height: 110rpx;
  padding-top:15rpx;
  box-sizing: border-box;
  position: absolute;
  left:50%;
  top:0;
  transform: translateX(-50%)
}
.block3{
  width: 100rpx;
  height: 110rpx;
  padding-top:15rpx;
  box-sizing: border-box;
  position: absolute;
  left:75%;
  top:0;
  transform: translateX(-50%)
}
.line1{
  width: 100rpx;
  height: 2rpx;
  background-color: #e6e6e6;
  position: absolute;
  top:40rpx;
  left:30%;
}
.line2{
  width: 100rpx;
  height: 2rpx;
  background-color: #e6e6e6;
  position: absolute;
  top:40rpx;
  left:55%;
}

.circle{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #b2b2b2;
  font-size: 22rpx;
  color:#fff;
  text-align: center;
  line-height: 48rpx;
  margin:auto;
}
.head_text{
  font-size: 22rpx;
  color:#9b9a9a;
  margin-top:10rpx;
  text-align: center;
  width: 100%;
}
.select_bg{
  background-color: #ee685d;
}
.select_color{
  color:#ee685d;
}
.hear{
  width: 100%;
}
.hear_title{
  font-size: 26rpx;
  width: 100%;
  text-align: center;
}
.hear_btn_bg{
  width: 120rpx;
  height: 123rpx;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.hear_footer{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 20rpx;
  color:#ee685d;
}
.warp{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top:20rpx;
}
.warp_box{
  width: 50%;
}
.warp_title{
  width: 100%;
  font-size: 26rpx;
  text-align: center;
  line-height: 26rpx;
  height: 26rpx;
  color:#3d3c42;
  box-sizing: border-box;
}
.warp_titler{
  border-left:1rpx solid #e6e6e6;
}

.btn{
  width: 298rpx;
  height: 190rpx;
  margin:auto;
  margin-top:40rpx;
  position: relative;
}
.icon_jiao{
  width: 22rpx;
  height: 22rpx;
  position: absolute;
}
.icon_jiao1{
  left:0;
  top:0;
}
.icon_jiao2{
  right:0;
  top:0;
  transform:rotate(90deg);
}
.icon_jiao3{
  left:0;
  bottom:0;
  transform:rotate(270deg);
}
.icon_jiao4{
  right:0;
  bottom:0;
  transform:rotate(180deg);
}

.btn_box{
  width: 256rpx;
  height: 150rpx;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow:0 0 10px #d2d2d2;
}
.img_file{
  width: 256rpx;
  height: 150rpx;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.btn_bg{
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  width: 191rpx;
  height: 86rpx;
}
.btn_camera{
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  width: 64rpx;
  height: 64rpx;
}
/* 提示 */
.prompt{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 20rpx;
  color:#ee685d;
}


/* 下方输入区域 */
.content{
  width: 100%;
  padding:20rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.content_title{
  font-size: 24rpx;
  line-height: 60rpx;
  width: 100%;
  height: 60rpx;
  color:#a2a1a1;
}
.li{
  width: 100%;
  height: 100rpx;
  border-bottom:1rpx solid #e6e6e6;
  display: flex;
  justify-content: flex-start;
}
.li:last-child{
  border:none;
}
.li2{
  padding-right:20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
}
.input2{
  width: 320rpx;
  height: 100rpx;
  font-size: 28rpx;
}
.text{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color:#ee685d;
  width: 180rpx;
  text-align: center;
}
.input{
  /* width: 100%; */
  height: 100rpx;
  font-size: 28rpx;
  flex: 1;
}
.placeholderclass{
  font-size: 28rpx;
  color:#9b9a9a;
}

.left{
  width: 186rpx;
  line-height: 100rpx;
}

.button{
  width:670rpx;
  height:78rpx;
  background-color:#ea6248;
  border-radius:10rpx;
  text-align:center;
  line-height:78rpx;
  font-size:30rpx;
  color:#fff;
  font-weight:600;
  margin:auto;
  margin-top:50rpx;
}
