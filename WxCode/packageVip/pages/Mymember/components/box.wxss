

/* 弹出框css */
.conform{
  position: fixed;
  left: 0;
  right:0;
  top:0;
  bottom:0;
  background: rgba(0,0,0,.5);
  z-index: 11;
}
.conform_box{
  width: 624rpx;
  /* height: 700rpx; */
  background-color: #fff;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  overflow: hidden;
}

.cha{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right:20rpx;
  top:30rpx;
  z-index: 11;
}
.head{
  border-width: 0px;
  width: 100%;
  height: 300rpx;
  background: inherit;
  background-color: rgba(255, 153, 102, 1);
  border: none;
  border-radius: 0px;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.name{
  width: 100%;
  text-align: center;
  color:#fff;
  margin-top:20rpx;
}
.warp{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: flex-start;
}
.smbox{
  width: 50%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.price{
  color:red;
  font-weight: 600;
  margin-top:20rpx;
  font-size: 28rpx;
}
.bottom{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-top:1rpx solid #dedede;

  font-family: 'Arial Normal', 'Arial', sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 26rpx;
  letter-spacing: normal;
  color: #333333;
  text-transform: none;
}