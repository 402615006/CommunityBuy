

.safety{
  width: 100%;
  border-top:1rpx solid #e6e6e6;
  padding:0 30rpx;
  box-sizing: border-box;
}

.li{
  width: 100%;
  height: 130rpx;
  border-bottom:1rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.li .text{
  font-size: 28rpx;
}
.rigth{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.jiantou{
  width: 50rpx;
  height: 50rpx;
}
.icon_btn{
  width: 76rpx;
  height: 43rpx;
}

.box1{
  width: 100rpx;
  height: 50rpx;
  border: 1rpx solid #dedede;
  border-radius: 25rpx;
  position: relative;
}
.box2{
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #dedede;
  border-radius: 25rpx;
  position: absolute;
  top:0;
  left:0;
  transition: .3s;
  background-color: #fff;
}
.act_box{
  left:50rpx;
}
.act_bg{
  background-color: #ee685d;
}