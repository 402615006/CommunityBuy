.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 100;
  color: #fff;
  background-color: #000;
  opacity: 0.1;
}
.commodity_attr_boxcard{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 101;
  background: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}


.head{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 28rpx;
  padding:0 40rpx;
  box-sizing: border-box;

}
.cha{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right:20rpx;
  top:20rpx;
}

.content{
  width: 100%;
  height: 170rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.block{
  height: 78rpx;
  padding:0 30rpx;
  box-sizing: border-box;
  background-color: #e8e8e8;
  border-radius:10rpx; 
  text-align: center;
  line-height: 78rpx;
  font-size: 24rpx;
}
.act_block{
  background-color: #f3cac2;
  color:#ea6248;
}

.footer{
  height: 220rpx;
  width: 100%;
  padding-top:60rpx;
  box-sizing: border-box;
}
.btn{
  width:670rpx;
  height:78rpx;
  background-color:#ea6248;
  border-radius:10rpx;
  text-align:center;
  line-height:78rpx;
  font-size:30rpx;
  color:#fff;
  font-weight:600;
  margin:auto;
}

