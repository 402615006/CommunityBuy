

page{
  background-color: #f7f7f7;
  width: 100%;
  height: 100%;
  position: relative;
}

.box{
  position: absolute;
  width: 636rpx;
  height: 858rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  z-index: 1;
}
.top{
  width: 568rpx;
  height: 30rpx;
  background-color: #ec675c;
  border-radius: 15rpx;
  position: absolute;
  top:-15rpx;
  left:50%;
  transform: translateX(-50%);
  z-index: 1;
}
.content{
  position: absolute;
  width: 636rpx;
  height: 858rpx;
  top:0;
  left:0;
  padding-top:40rpx;
  box-sizing: border-box;
  z-index: 2;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow:0 0 10px #c8c8c8;
}
