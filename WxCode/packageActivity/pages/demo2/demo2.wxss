.video_box{
  width: 100%;
  height: auto;
  position: fixed;
  top:0;
  bottom: 0;
  background-color: #000;
}
.swiper{
  width: 100%;
  height: 100%;
}
swiper-item{
  width: 100%;
  height: 100%;
  /* position: relative; */
}
video{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height:100vh;
  padding: 0;
  z-index: 1;
}


.warp{
  width: 80%;
  position: absolute;
  bottom:120rpx;
  left:0;
  color:#fff;
  padding-left:20rpx;
  box-sizing: border-box;
  z-index: 2;
}
.name{
  font-size: 30rpx;
  font-weight: bold;
}
.text{
  font-size: 28rpx;
  color:#f5f5f5;
  line-height: 30rpx;
  margin-top:25rpx;
}
.muic_name{
  font-size: 28rpx;
  margin-top:26rpx;
}


.footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
  justify-content: space-around;
  z-index: 10;
  color:#c1bcbc;
  align-items: center;
  font-size: 30rpx;
}
.gang{
  width: 100vw;
  height: 1px;
  background-color: #fff;
  opacity: 0.1;
  position: absolute;
  top:0;
  left:0;
}
.select_bar{
  color:#fff;
  font-weight: bold;
}
.font_size30{
  font-size: 30rpx;
}