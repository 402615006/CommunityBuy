
page{
  background-color: #dedede;
}
.content{
  width: 100vw;
  height: 100vh;
  position: fixed;
  left:0;
  top:0;
  transition: 0.4s;
}

.icon_jiantou{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left:20rpx;
  top:30rpx;
}
.head{
  width: 100%;
  height: 100rpx;
  background: linear-gradient(45deg, #0081ff, #1cbbb4);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color:#fff;
  position: relative;
}
.content.show{
  left:85vw;
  transform: scale(1, 0.9);
  box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
}
.btn_show{
  margin-top:50rpx;
  background-color: green;
  color:#fff;
}

.box{
  widows: 100%;
  padding:0 40rpx;
  box-sizing: border-box;
}
.cont_box{
  width: 100%;
  border-radius: 16rpx;
  background-color: #fff;
  margin-top:50rpx;
}
.cont_box .li{
  width: 100%;
  height: 80rpx;
  border-bottom:1rpx solid #dedede;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 10rpx 0 20rpx;
  box-sizing: border-box;
}
.icon_r{
  width: 50rpx;
  height: 50rpx;
}


.left_box{
  position: fixed;
  width: 85vw;
  height: 100vh;
  left:0;
  top:0;
  padding:150rpx 50rpx;
  box-sizing: border-box;
  background-color: #dedede;
  transform: scale(1, 1) translateX(0%);
  transition: 0.4s;
}
.left_box.show{
  transform: scale(1, 0.9) translateX(-100%);
}
.left_content{
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 2;
  background-color: #fff;
}
.left_content .li{
  width: 100%;
  height: 80rpx;
  border-bottom:1rpx solid #dedede;
}

.DrawerClose{
  position: fixed;
  width: 40vw;
  height: 100vh;
  color: transparent;
  right:0;
  top:0;
  background-image: linear-gradient(90deg, rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.6));
  z-index: 4;
  pointer-events:none;
  opacity: 0;
  transition: 0.4s;
}
.DrawerClose.show{
  pointer-events: all;
  opacity: 1;
  width: 15vw;
}