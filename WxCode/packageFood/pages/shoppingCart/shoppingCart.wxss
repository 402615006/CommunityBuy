
page{
  background-color: #f7f7f7;
}
.shoppcard{
  width: 100%;
  padding-bottom:120rpx;
  box-sizing: border-box;
}
.head{
  position: sticky;
  top:0;
  z-index: 1;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding:0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color:#575757;
  align-items: center;
}
.head .left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 90rpx;
}
.q_img{
  width: 40rpx;
  height: 40rpx;
}
.ul{
  width: 100%;
  margin-top:15rpx;
  background-color: #fff;
}
.ul_head{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 90rpx;
}
.img_y{
  width: 85rpx;
  height: 40rpx;
  text-align: center;
}
.shangpu{
  width: 40rpx;
  height: 40rpx;
  margin-right:10rpx;
}
.jiantou{
  width: 50rpx;
  height: 50rpx;
}
.li{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom:50rpx;
  padding-right:20rpx;
  box-sizing: border-box;
}
.content{
  flex: 1;
  display: flex;
  justify-content: flex-start;
  position: relative;
}
.img_view{
  width: 118rpx;
  height: 118rpx;
}
.img_src{
  width: 118rpx;
  height: 118rpx; 
}

.text{
  margin-left:20rpx;
}
.text .name{
  font-size: 28rpx;
  color:#000;
}
.text .detail{
  font-size: 22rpx;
  color:#a2a1a1;
}
.text .price{
  font-size: 26rpx;
  color:#000;
}
.text .price2{
  font-size: 22rpx;
  color:#8a8e98;
  margin-left:10rpx;
  text-decoration:line-through;
}

