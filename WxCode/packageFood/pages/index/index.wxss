

page{
  background-color: #fff;
}
.index{
  padding:0 20rpx;
  box-sizing: border-box;
}
.banner{
  width: 100%;
  height: 270rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.swiper{
  width: 100%;
  height: 270rpx;
  border-radius: 10rpx;
}
.banner-item{
  width: 100%;
  height: 270rpx;
}

/* 搜索栏 */
.search{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  position: sticky;
  top:0;
  background-color: #fff;
  opacity: 0.9;
}
.search_left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 120rpx;
}
.loc{
  width: 40rpx;
  height: 40rpx;
}
.search_text{
  font-size: 30rpx;
  color:#000;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.search_jiantou{
  font-size:16rpx; 
  margin-left:5rpx;
}
.search_right{
  flex:1;
  padding:0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.input{
  width: 100%;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  position: relative;
  padding-left:60rpx;
  font-size: 24rpx;
}
.placeholderStyle{
  font-size: 22rpx;
  color:#cbcbcb;
}
.search_img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left:10rpx;
  top:50%;
  transform: translateY(-50%);
}
/* 门店 */
.ul{

}
.li{
  display: flex;
  justify-content: space-between;
  padding:26rpx 10rpx;
  border-bottom:1rpx solid #e6e6e6;
}
.li .left{
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
}
.left_img{
  width: 128rpx;
  height: 128rpx;
}
.content{
  margin-left:20rpx;
}
.content .name{
  font-size: 30rpx;

}
.content .detail{
  font-size: 24rpx;
  margin-top:5rpx;
  color:#838383
}
.content .label{
  margin-top:5rpx;
}
.content .label .test{
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
  padding:0 10rpx;
  border: 1rpx solid #e85959;
  border-radius: 4rpx;
  font-size: 18rpx;
  text-align: center;
  color:#e85959;
  margin-right:10rpx;
}

.li .right{
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.li .right .top{
  display: flex;
  justify-content: flex-end;
}
.li .block{
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  border-radius:4rpx;
  background-color: #62d084;
  font-size: 24rpx;
  line-height: 34rpx;
  color:#fff;
  margin-left:12rpx;
  text-align: center;
}
.li .block2{
  background-color: #7582e7;
}
.li .block3{
  background-color: #ea6248
}
.li .right .bottom{
  font-size: 20rpx;
  color:#838383;
  text-align: right;
}

.noDataView {
  width: 100%;
  margin-top: 60rpx;
}

.noData {
  width: 300rpx;
  height: 240rpx;
  position: relative;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
}