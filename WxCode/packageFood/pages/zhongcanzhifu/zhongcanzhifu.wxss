.senter{
  width: 700rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin:auto;
  position: relative;
  padding:0 20rpx;
  box-sizing: border-box;
  margin-top:20rpx;
}
.senter_li{
  width: 100%;
  height: 100rpx;
  border-bottom:1rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.senter_li:last-child{
 
  border-bottom:none;
  
