.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 21;
  color: #fff;
  background-color: #000;
  opacity: 0.1;
}

.commodity_attr_boxcard {
  position: fixed;
  z-index: 22;
  top: 50%;
  left: 50%;
  background-color: #fff;
  width: 618rpx;
  transform: translate(-50%, -50%);
  padding: 50rpx 0;
  box-sizing: border-box;
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 20rpx #B6B6B6;
}

.head {
  width: 100%;
  font-size: 34rpx;
  text-align: center;
}

.text {
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.h {
  width: 32rpx;
  height: 32rpx;
  background-color: #ea6248;
  font-size: 20rpx;
  color: #fff;
  display: inline-block;
  text-align: center;
  line-height: 32rpx;
  margin-left: 15rpx;
}

.m {
  width: 32rpx;
  height: 32rpx;
  background-color: #ea6248;
  font-size: 20rpx;
  color: #fff;
  display: inline-block;
  text-align: center;
  line-height: 32rpx;
}

.s {
  width: 32rpx;
  height: 32rpx;
  background-color: #eaab48;
  font-size: 20rpx;
  color: #fff;
  display: inline-block;
  text-align: center;
  line-height: 32rpx;
}

.avatar {
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
}

.img_block {
  width: 64rpx;
  height: 64rpx;
  display: inline-block;
  position: relative;
}

.img_block:nth-child(1) {
  margin-left: 0;
}

.tip {
  width: 57rpx;
  height: 28rpx;
  background-color: #ea6248;
  text-align: center;
  line-height: 28rpx;
  font-size: 18rpx;
  color: #fff;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  position: absolute;
  left: 15rpx;
  top: -20rpx;
  z-index: 10;
}

.btn {
  width: 528rpx;
  height: 78rpx;
  background-color: #ea6248;
  line-height: 78rpx;
  border-radius: 8rpx;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  margin: auto;
  margin-top: 60rpx;
}

.cha {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 15rpx;
  right: 15rpx;
}

.color_ea6248 {
  color: #ea6248;
}

.margin_lr {
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.touxiang {
  width: 64rpx;
  height: 64rpx;
  position: relative;
  z-index: 8;
  border: 1rpx solid #d5d5d5;
  border-radius: 50%;
}

