.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 100;
  color: #fff;
  background-color: rgba(0,0,0,0.7);
  /* opacity: 0.1; */
}
.commodity_attr_boxcard{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 101;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.box{
  width: 100%;
  background-color: #fff;
  border-top-right-radius: 10rpx;
  border-top-left-radius:10rpx;
  padding-bottom:78rpx;
  box-sizing: border-box; 
}
.head{
  height: 120rpx;
  width: 100%;
  padding:0 40rpx;
  box-sizing: border-box;
  position: relative;
  font-size: 30rpx;
  line-height: 120rpx;
}
.cen_img{
  width: 50rpx;
  height: 50rpx;
  position:absolute;
  right:20rpx;
  top:50%;
  transform: translateY(-50%) 
}
.content{
  height: 176rpx;
  width: 100%;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding :0 40rpx;
  box-sizing: border-box;
}
.scroll{
  width: 100%;
  height: 176rpx;
  white-space:nowrap;
  padding-top:50rpx;
  box-sizing: border-box;
}
.smbox{
  height: 78rpx;
  min-width: 78rpx;
  padding:0 20rpx;
  text-align: center;
  line-height: 78rpx;
  background-color: #e8e8e8;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  font-size: 28rpx;
  color:#13161a;
  display: inline-block;
}
.actsmbox{
  background-color: #f9d0c8;
  color:#ea6248;
}
.times{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 40rpx;
  box-sizing: border-box;
}
.times_text{
  font-size: 30rpx;
}
.times_name{
  height: 57rpx;
  padding:0 22rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  background-color: #f9d0c8;
  color:#ea6248;
  line-height: 57rpx;
  text-align: center;
}
.button{
  width: 667rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 32rpx;
  color:#fff;
  font-weight: 600;
  background-color: #ea6248;
  border-radius: 6rpx;
  text-align: center;
  margin: auto;
  margin-top:10rpx;
}