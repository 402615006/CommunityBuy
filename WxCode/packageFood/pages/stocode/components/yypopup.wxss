  line-height: 78rpx;
  background-color: #e8e8e8;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  font-size: 28rpx;
  color:#575757;
}

.button{
  width: 670rpx;
  height: 78rpx;
  background-color: #ea6248;
  border-radius: 10rpx;
  text-align: center;
