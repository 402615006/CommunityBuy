
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 100;
  color: #fff;
  background-color:rgba(0,0,0,0.7);
  /* opacity: 0.1; */
}
.commodity_attr_boxcard{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 101;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.scrolls1{
  width: 100%;
  max-height:1100rpx; 
  padding-bottom:50rpx;
  box-sizing: border-box;
}
.head{
  width: 100%;
  height: 93rpx;
  line-height: 92rpx;
  font-size:28rpx;
  color:#575757; 
  text-align: center;
  position: relative;
}
.cen_img{
  width: 50rpx;
  height: 50rpx;
  position:absolute;
  right:20rpx;
  top:50%;
  transform: translateY(-50%) 
}
.content{
  width: 100%;
  /* padding:0 40rpx;
  box-sizing: border-box; */
}
.box{
  width: 100%;
  height: 190rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-around;
}
.box .black{
  width: 170rpx;
  height: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction:column;
  align-items: center;
}
.time_img{
  width: 40rpx;
  height: 40rpx;
}
.text1{
  font-size: 30rpx;
  font-weight: 600;
  margin-top:17rpx
}
.text2{
  font-size: 20rpx;
  color:#9b9a9a;
  margin-top:12rpx
}

.number{
  height: 210rpx;
  width: 100%;
  padding:0 40rpx;
  box-sizing: border-box;
}
.number .title{
  height: 96rpx;
  width: 100%;
  line-height: 96rpx;
  font-size: 28rpx;
}
.number .block{
  width: 100%;
  display: flex;
  justify-content: flex-start;
}
.number .smbox{
  height: 78rpx;
  min-width: 78rpx;
  padding:0 20rpx;
  text-align: center;
  line-height: 78rpx;
  background-color: #e8e8e8;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  font-size: 28rpx;
  color:#13161a;
}
.number .actsmbox{
  background-color: #f9d0c8;
  color:#ea6248;
}
.remak_ul .actsmbox{
  background-color: #f9d0c8;
  color:#ea6248;
}
.bg_li{
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}
.name{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  height: 98rpx;
  align-items: center;
  font-size: 30rpx;
  padding:0 40rpx;
  box-sizing: border-box;
}
.left{
  width: 110rpx;
}
.right{
  flex: 1;
  height: 60rpx;
}
.input{
  width: 100%;
  height: 100%;
}
.remake{
  padding:0 40rpx;
  box-sizing: border-box;
}
.remake .title{
  height: 96rpx;
  width: 100%;
  line-height: 96rpx;
  font-size: 28rpx;
}
