
page{
  background-color: #f7f7f7;
  padding-bottom:150rpx;
  box-sizing: border-box;
}
.warp{
  width:100%;
}
.warp .title{
  font-size:26rpx;
  color:#8b8b8b;
  padding-left:10rpx;
}


.box{
  width:95%;
  border-radius: 10rpx;
  background-color: #eee;
  margin-top:10rpx;
  position: relative;
  padding:0 20rpx;
  box-sizing: border-box;
  margin-left:2.5%;
}
.yuan_l{
  position: absolute;
  left:-15rpx;
  top:70rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
}
.yuan_r{
  position: absolute;
  right:-15rpx;
  top:70rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
}

.box_head{
  width: 100%;
  height: 84rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 22rpx;
}
.box .icon{
  width: 28rpx;
  height: 28rpx;
  margin-right:20rpx;
}

.box .li{
  width: 100%;
  min-height: 100rpx;
  border-top:1rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between
}
.box .li:first-child{
  border-top:none;
}

.box .li .img{
  width: 80rpx;
  height:80rpx;
  margin:10rpx;
  margin-left:0rpx;
  float:left;
}

.box .li .img image{
  width: 100%;
  height:100%;
}

.li_left{
  width: 400rpx;
  min-height: 100rpx;
  display: flex;
  flex-direction:column;
  /* justify-content: center; */
  padding-top:30rpx;
  padding-bottom:30rpx;
  box-sizing: border-box;
}
.li_left .method{
  width: 100%;
  padding-left:20rpx;
  font-size: 22rpx;
  margin-top:5rpx;
  color:#8b8b8b;
}
.li_left .favor{
  margin-right:5rpx;
}
.li_left .pack_li{
  width: 100%;
  padding-left:20rpx;
  font-size: 22rpx;
  margin-top:5rpx;
  color:#8b8b8b;
}
.li_left .name{
  font-size: 30rpx;
  font-weight: 600;
}

.li_right{
  display: flex;
  justify-content: space-between;
  flex: 1;
  height: 100rpx;
  align-items: center;
  font-size: 24rpx;
}

.xiaoji{
  width: 95%;
  box-sizing: border-box;
  font-size: 26rpx;
  text-align:right;
  margin-right:2.5%;
  margin-top:10rpx;
}
.xiaoji view{float:right;}

.box2{
  color:#9b9a9a;
}



