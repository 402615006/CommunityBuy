}

.box{
  width: 700rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin:auto;
  position: relative;
  padding:0 20rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
}


.yuan_l{
  position: absolute;
  left:-15rpx;
  top:70rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
}
.yuan_r{
  position: absolute;
  right:-15rpx;
  top:70rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
}

.box_head{
  width: 100%;
  height: 84rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 22rpx;
}
.box .icon{
  width: 28rpx;
  height: 28rpx;
  margin-right:20rpx;
}

.box .li{
  width: 100%;
  min-height: 100rpx;
  border-top:1rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between
}
.li_left{
  width: 400rpx;
  min-height: 100rpx;
  display: flex;
  flex-direction:column;
  justify-content: center;

}
.li_left .name{
  font-size: 30rpx;
  font-weight: 600;
}
.li_right{
  display: flex;
  justify-content: space-between;
  flex: 1;
  height: 100rpx;
  align-items: center;
  font-size: 24rpx;
}

.box_footer{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top:1rpx solid #e6e6e6;
}
.box_footer_left{
  font-size: 30rpx;
}
.box_footer_right{
  font-size: 24rpx;
}

.xiaoji{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 40rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background-color: #fff;
  margin-top:22rpx;
  margin-bottom:22rpx;
}


.box2{
  color:#9b9a9a;
}



