
page{
  background-color: #f7f7f7;
  padding-bottom:150rpx;
  box-sizing: border-box;
}

.head{
  /* background-color: #fff; */
  width: 100%;
  height: 490rpx;
}
.bg_img{
  width: 100%;
  height: 322rpx;
  position: relative;
}
.bg_images{
  width: 100%;
  height: 322rpx;
}
.logo{
  width: 127rpx;
  height: 127rpx;
  position: absolute;
  bottom:-32rpx;
  left:50%;
  transform: translateX(-50%);
  background-color: #fff;
}
.logo_img{
  width: 127rpx;
  height: 127rpx;
}
.head_text{
  width: 100%;
  height: 148rpx;
  text-align: center;
  padding-top:52rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.zuoweiicon{
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  margin-right:10rpx;
}
.zuoweiimg{
  width: 30rpx;
  height: 30rpx;
}
.head_text text{
  margin-right:10rpx;
}
.head_text .title{
  font-size: 32rpx;
  font-weight: 600;
}
.head_text .detail{
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

