.commodity_screen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 3;
  color: #fff;
  background-color: #000;
  opacity: 0.1;
}

.commodity_attr_boxcard{
  position: fixed;
  z-index: 3;
  bottom:110rpx;
  left:0;
  background-color: #fff;
  width: 100%;
}
.head{
  height: 100rpx;
  width: 100%;
  padding:0 20rpx;
  font-size: 26rpx;
  color:#9b9a9a;
  line-height: 100rpx;
}
.scroll{
  max-height: 600rpx;
}
.box{
  width: 100%;
  padding:0 20rpx 30rpx 20rpx;
  box-sizing: border-box;
}
.li{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
}
.cards_icon{
  width: 50rpx;
  height: 50rpx;
  margin-right:20rpx;
}
.right{
  color:#ea6248;
  font-size: 34rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}