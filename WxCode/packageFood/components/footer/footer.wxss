/* 购物车弹框 */
.commodity_screen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 1;
  color: #fff;
  background-color:rgba(0,0,0,0.7);
  /* opacity: 0.1; */
}
.commodity_attr_boxcard{
  position: fixed;
  z-index: 2;
  bottom:110rpx;
  left:0;
  background-color: #fff;
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.header{
  width: 100%;
  height: 100rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left{
  font-size: 20rpx;
  color:#9b9a9a;
}
.right{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
}
.icon{
  width: 30rpx;
  height: 30rpx;
  margin-right:5rpx;
}

.scroll{
  max-height: 800rpx;
  box-sizing: border-box;
  padding-bottom:30rpx;
}
