}
.method .favor{
  margin-right:10rpx;
}
.li_left .pack_li{
  width: 100%;
  padding-left:20rpx;
  font-size: 22rpx;
  color:#8b8b8b;
  box-sizing: border-box;
  line-height: 28rpx;
  margin-top:5rpx;
}
.li_right{
  display: flex;
  width: 45%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color:#ea6248;
  position: relative;
}
