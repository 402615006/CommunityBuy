
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.warp_bg{
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top:0;
  left:0;
  z-index: 100;
}

.warp{
  width: 600rpx;
  border-radius: 15rpx;
  background-color: #fff;
  position: fixed;
  z-index: 101;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  padding:0 20rpx;
  box-sizing: border-box;
}
.head{
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#2f2f2f;
  font-weight: bold;
}
.content{
  min-height: 350rpx;
  max-height: 500rpx;
}
.title {
  font-size: 30rpx;
  color: #575757;
}
.row{
  padding-left:10rpx;
  box-sizing: border-box;
  margin-top:10rpx;
}
.price{
  font-size: 36rpx;
  font-weight: bold;
  color:#e85b4d;
}
.addprice{
  font-size: 26rpx;
  color:#e85b4d;
  margin-left:10rpx;
}
.seasoningtext{
  display: inline-block;
  height: 64rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  background-color: #e8e8e8;
  border-radius: 5rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color:#575757;
  margin-right:25rpx;
  margin-bottom:20rpx;
}
.acttext{
  background-color: #fad1ce;
  color:#ee685d;
}



.footer{
  width: 100%;
  height: 90rpx;
  background-color: #fafafa;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.footer_right{
  height: 50rpx;
  width: 120rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  background-color:#ea6248;
  color:#fff; 
  text-align: center;
  line-height: 50rpx;
}
.cha_box{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom:-80rpx;
  left:50%;
  transform: translateX(-50%);
  border: 2rpx solid #908f8f;
  border-radius: 50%;
}
.cha{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}